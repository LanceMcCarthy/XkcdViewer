<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:models="using:XkcdViewer.Maui.Models"
             xmlns:viewModels="using:XkcdViewer.Maui.ViewModels"
             xmlns:resources="clr-namespace:XkcdViewer.Maui.Resources"
             x:Class="XkcdViewer.Maui.Views.MainPage"
             x:DataType="viewModels:MainViewModel"
             x:Name="ThisPage"
             Title="{Binding Title}">

    <Grid RowDefinitions="auto,*,*">
        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center"
                     Grid.Row="0"
                     Margin="5">
            <Label Text="{Binding CurrentComic.Num}"
                   FontFamily="Raleway"
                   FontSize="Large"/>
            <Label Text=" - "
                   TextColor="{StaticResource DarkGrayTextColor}"
                   FontFamily="Raleway"
                   FontSize="Large"/>
            <Label Text="{Binding CurrentComic.Title}"
                   FontFamily="Raleway"
                   FontSize="Large"/>
        </StackLayout>

        <telerik:RadSlideView x:Name="slideView"
                              ItemsSource="{Binding Comics}"
                              CurrentItem="{Binding CurrentComic, Mode=TwoWay}"
                              Orientation="Horizontal"
                              NavigationButtonsVisibility="HiddenWhenDisabled"
                              Grid.Row="1">
            <telerik:RadSlideView.ItemTemplate>
                <DataTemplate x:DataType="models:Comic">
                    <Grid Padding="10"
                          BackgroundColor="Gray">
                        <Image x:Name="MyImage"
                               Source="{Binding Converter={StaticResource ComicToImageSourceConverter}}"/>
                    </Grid>
                </DataTemplate>
            </telerik:RadSlideView.ItemTemplate>
        </telerik:RadSlideView>

        <VerticalStackLayout Padding="10,5,10,0" Spacing="5" Grid.Row="2">
            <HorizontalStackLayout HorizontalOptions="Center">
                <Button Text="{x:Static resources:IconFont.Share}"
                        Command="{Binding ShareCommand}"
                        CommandParameter="{Binding .}"
                        Style="{StaticResource OverlayButtonStyle}"/>
                <Button BackgroundColor="{Binding CurrentComic.IsFavorite, Converter={StaticResource FavoriteToColorConverter}}"
                        Text="{Binding CurrentComic.IsFavorite, Converter={StaticResource IsFavoriteIconCharacterConverter}}"
                        Command="{Binding ToggleFavoriteCommand}"
                        CommandParameter="{Binding .}"
                        Style="{StaticResource OverlayButtonStyle}"/>
            </HorizontalStackLayout>
                <Button Text="Get next comic"
                        Command="{Binding FetchComicCommand}"
                        Style="{StaticResource OverlayButtonStyle}"
                        FontFamily="Raleway"
                        WidthRequest="200"/>
        </VerticalStackLayout>

