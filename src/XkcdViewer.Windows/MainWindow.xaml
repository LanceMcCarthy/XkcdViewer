<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="XkcdViewer.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:XkcdViewer.Windows"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:input="using:Telerik.UI.Xaml.Controls.Input"
        xmlns:controls="using:Telerik.UI.Xaml.Controls"
        mc:Ignorable="d"
        Title="XkcdViewer.Windows">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <DataTemplate x:Key="ComicTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Grid.Row="0"
                                Margin="10">
                        <TextBlock Text="{Binding CurrentComic.Num, FallbackValue='~'}"
                                   Margin="5" />
                        <TextBlock Text="{Binding CurrentComic.Title, FallbackValue='~'}" 
                                   Margin="5" />
                    </StackPanel>

                    <Image Source="{Binding CurrentComic.Img}"
                           Grid.Row="1" />

                    <StackPanel Padding="10,5,10,0"
                                Orientation="Vertical"
                                Spacing="5"
                                Grid.Row="2">
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <Button Content="Previous" />
                            <Button Content="Next" />
                        </StackPanel>
                        <Button Content="Get next comic"
                                Command="{Binding FetchComicCommand}"
                                FontFamily="Raleway"
                                Width="200"
                                Visibility="{Binding GetNewComicButtonIsVisible}"
                                HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="PdfTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <controls:RadPdfViewerToolBar RadPdfViewer="{Binding ElementName=pdfViewer, Mode=OneTime}" />
                    <controls:RadPdfViewer Grid.Row="1"
                                           x:Name="pdfViewer"
                                           DocumentSource="ms-appx:///ModernizingApps2019.pdf" />
                </Grid>
            </DataTemplate>
        </Grid.Resources>

        <input:RadSegmentedControl x:Name="SegmentedControl"
                                   SelectionChanged="Segements_OnSelectionChanged"
                                   HorizontalAlignment="Left"
                                   Grid.Row="0"/>

        <ContentPresenter x:Name="Presenter"
                          Grid.Row="1" />
    </Grid>
</Window>
